{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}

<div class="row row-cols-1 row-cols-md-3 g-4">

{% for activity in activities %}
        <div class="col col-width">
            <div class="card h-100">
            <img src="/uploads/{{ activity.picture }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title text-pink">{{ activity.name}} Ã  {{ activity.city }}</h5>
                <p class="card-text">Description : {{ activity.description }}</p>
                {% for rating in activity.ratings %}
                {% if rating.rate is not same as 0 %}
                <div>
                    <p>{{ rating.age }} : 
                        {% for i in 1.. rating.rate %}
                            <img class="gold-star" src="/uploads/gold-star.png" alt="...">
                        {% endfor %}
                    </p>
                </div>
                {% else %}
                <p>{{ rating.age }} : {{ rating.rate}} </p>
                {% endif %}
                {% endfor %}
                <button class="btn" id="open-rating">+++</button>
                <div id="rating-zone">
                    <p>Evaluer</p>
                    <select>
                        <option>0/5</option>
                        <option>1/5</option>
                        <option>2/5</option>
                        <option>3/5</option>
                        <option>4/5</option>
                        <option>5/5</option>
                    </select>
                </div>
            </div>
            </div>
        </div>
{% endfor %}

</div>

{% endblock %}