{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
<div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <h1 class="text-pink text-center mb-5">Connexion</h1>
                <div class="col-6 d-flex flex-column align-items-center">

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('login') }}" method="post" class="w-75">
                    <label for="username">Email:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="mb-3 connection-fields form-control"/>

                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password" class="mb-3 connection-fields form-control text-secondary"/>

                    {# If you want to control the URL the user is redirected to on success
                    <input type="hidden" name="_target_path" value="/account"/> #}

                    <input type="hidden" name="_target_path" value="/"/>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="w-100 d-flex justify-content-center">
                        <button type="submit" class="background-pink btn-connection m-5 w-50">Connexion</button>
                    </div>

                    <div class="w-100 d-flex justify-content-center">
                        <a href="{{ path('app_register') }}">Cr√©er un compte</a>
                    </div>
                </form>

                </div>
 </div>
</div>
{% endblock %}